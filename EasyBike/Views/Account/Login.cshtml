@model Domain.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()

    <div class="container main">
        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-xs-12 col-md-offset-3 col-lg-offset-4 col-xl-offset-4">
                <h4 class="titles">Log in</h4>

                <div class="form-group">
                    <input type="email" placeholder="Enter your email"  name="Model.Email" class="form-control" id="email">
                </div>

                <div class="form-group">
                    <input type="password" placeholder="Password" name="Model.Password" class="form-control">
                </div>

                <button type="submit" class="btn btn-success btn-block">Log in</button>
                <div class="row login-footer">
                    <div class="col-sm-6 col-xs-6">
                        <a id="link-create-account" href="/Account/Register">Create account</a>
                    </div>
                    <div class="col-sm-6 col-xs-6">
                        <a id="link-forgot-password" href="">Forgot password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
