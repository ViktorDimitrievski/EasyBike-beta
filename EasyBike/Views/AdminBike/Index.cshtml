@model Domain.ViewModels.Administration.AdminBikesView

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}

@Html.Partial("BackendParts/PageHeader")

<div class="row">
    <div class="col-lg-12 col-md-12 table-holder">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-content">
                    <table class="dataTable table table-hover table-striped">
                        <thead>
                            <tr>
                                <td class="xsmall">Бр</td>
                                <td>Код за отклучувње</td>
                                <td>Сериски број</td>
                                <td class="td-medium">Град</td>
                                @*<td class="w150">Акции</td>*@
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int br = 1;
                                foreach (var item in Model.Bikes)
                                {
                                    <tr>
                                        <td class="project-status">
                                            <span class="label label-primary">@br</span>
                                        </td>
                                        <td class="project-title">
                                            <a href="/backend/AdminBike/Edit/@item.ID">@item.BikeCode</a>
                                        </td>
                                        <td class="project-title">@item.SerialNumber</td>
                                        <td class="project-title">@item.City.Name</td>
                                        @*<td>
                                                <a href="/backend/AdminBike/Edit/@item.ID" class="btn btn-primary"><i class="fa fa-pencil mr4"></i>Промени</a>
                                                <a class="btn btn-danger" onclick="Delete(this,@item.ID,'@ViewContext.RouteData.Values["Controller"].ToString()')"><i class="fa fa-times"></i></a>

                                           
                                        </td>*@
                                    </tr>
                                    br++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

