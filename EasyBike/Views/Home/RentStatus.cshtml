@model Domain.ViewModels.RentView

@{
    ViewBag.Title = "RentStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.HoursLeft > 1)
{
    <section>

        <div class="container main" id="Payment_method">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6  col-xs-offset-1">
                    <p>You have @Model.HoursLeft houts left:</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xs-offset-1">
                    <a href="#" onclick="PackagesHandler()">

                        <p>Want More Credits?</p>
                    </a>
                </div>
            </div>
            <div class="package" style="display:none;">
                <div class="row">
                    <div class="col-lg-offset-2 col-xl-offset-2 col-xs-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
                        <h4 class="titles">Choose some package or some hours</h4>
                        <div class="form-group">
                            <fieldset class="form-group">
                                <select>
                                    <option selected>Select how many hours you want to rent...</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </fieldset>
                        </div>
                        <div class="col-md-push-4 col-lg-push-4 col-xl-push-4 col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                            <button class="btn btn-success" type="button">CONTINUE</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div id="or" class="center-block">OR</div>
                    </div>
                </div>
                <div class="row" id="pricing-table">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="plan">
                            <h3>Basic<span>5h</span></h3>
                            <button class="btn btn-success" type="button">CONTINUE</button>
                            <ul>
                                <li>
                                    <h6>Daily free time</h6>
                                </li>
                                <li>
                                    <p><b>15 minutes</b></p>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">

                        <div class="plan">
                            <h3>Advance<span>10h</span></h3>
                            <button class="btn btn-success" type="button">CONTINUE</button>
                            <ul>
                                <li>
                                    <h6>Daily free time</h6>
                                </li>
                                <li>
                                    <p><b>30 minutes</b></p>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="plan">
                            <h3>Premium<span>120h</span></h3>
                            <button class="btn btn-success" type="button">CONTINUE</button>
                            <ul>
                                <li>
                                    <h6>Daily free time</h6>
                                </li>
                                <li>
                                    <p><b>90 minutes</b></p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
}
else
{
    <section>

        <div class="container main" id="Payment_method">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>You're out of credits</h1>
                </div>
            </div>

            <div class="package">
                <div class="row">
                    <div class="col-lg-offset-2 col-xl-offset-2 col-xs-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
                        <h4 class="titles">Choose some package or some hours</h4>
                        <div class="form-group">
                            <fieldset class="form-group">
                                <select>
                                    <option selected>Select how many hours you want to rent...</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </fieldset>
                        </div>
                        <div class="col-md-push-4 col-lg-push-4 col-xl-push-4 col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                            <button class="btn btn-success" type="button">CONTINUE</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-offset-5 col-sm-2 col-md-2 col-lg-2 col-xl-2 or-style" >
                        <div id="or">OR</div>
                    </div>
                </div>
                <div class="row" id="pricing-table">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="plan">
                            <h3>Basic<span>5h</span></h3>
                            <button class="btn btn-success" type="button">CONTINUE</button>
                            <ul>
                                <li>
                                    <h6>Daily free time</h6>
                                </li>
                                <li>
                                    <p><b>15 minutes</b></p>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">

                        <div class="plan">
                            <h3>Advance<span>10h</span></h3>
                            <button class="btn btn-success" type="button">CONTINUE</button>
                            <ul>
                                <li>
                                    <h6>Daily free time</h6>
                                </li>
                                <li>
                                    <p><b>30 minutes</b></p>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="plan">
                            <h3>Premium<span>120h</span></h3>
                            <button class="btn btn-success" type="button">CONTINUE</button>
                            <ul>
                                <li>
                                    <h6>Daily free time</h6>
                                </li>
                                <li>
                                    <p><b>90 minutes</b></p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
}

